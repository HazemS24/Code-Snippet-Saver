{
    "manifest_version": 3,
    "name": "Code Snippet Saver",
    "version": "1.0",
    "description": "Save and organize code snippets.",
    "permissions": ["storage", "contextMenus", "scripting", "activeTab"],
    "icons": {
        "16": "images/icon.png",
        "48": "images/icon.png",
        "128": "images/icon.png"
    },
    "action": {
      "default_popup": "popup.html",
      "default_title": "Code Snippet Saver",
      "default_icon": {
        "16": "images/icon.png",
        "48": "images/icon.png",
        "128": "images/icon.png"
      }
    },
    "background": {
        "service_worker": "background.js"
    }
  }